{
  "manifest_version": 3,
  "name": "Glance",
  "version": "0.0.1",
  "description": "Daily summaries of pages you visit",

  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_idle"
    }
  ]
}
